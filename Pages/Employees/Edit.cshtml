@page "{id:min(1)}"
@model ShiftPicker.Data.Models.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>UserModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserModel.Id" />
            <div class="form-group">
                <label asp-for="UserModel.FirstName" class="control-label">FirstName</label>
                <input asp-for="UserModel.FirstName" class="form-control"/>
                <span asp-validation-for="UserModel.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.LastName" class="control-label"></label>
                <input asp-for="UserModel.LastName" class="form-control"  />
                <span asp-validation-for="UserModel.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.UserName" class="control-label"></label>
                <input asp-for="UserModel.UserName" class="form-control" />
                <span asp-validation-for="UserModel.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.Password" class="control-label"></label>
                <input asp-for="UserModel.Password" class="form-control" />
                <span asp-validation-for="UserModel.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.Email" class="control-label"></label>
                <input asp-for="UserModel.Email" class="form-control" />
                <span asp-validation-for="UserModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.Phone" class="control-label"></label>
                <input asp-for="UserModel.Phone" class="form-control" />
                <span asp-validation-for="UserModel.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.RoleId" class="control-label">Role</label>
                @Html.DropDownListFor(x => x.UserModel.RoleId,
                                            new SelectList(Model.UserRoles, "Value", "Text"),
                                            htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.UserModel.RoleId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
