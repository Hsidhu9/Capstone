@page
@model ShiftPicker.Data.Models.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserModel.FirstName" class="control-label">First Name</label>
                <input asp-for="UserModel.FirstName" class="form-control" type="text" name="UserModel.FirstName"/>
                <span asp-validation-for="UserModel.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.LastName" class="control-label">Last Name</label>
                <input asp-for="UserModel.LastName" class="form-control" type="text" name="UserModel.LastName"/>
                <span asp-validation-for="UserModel.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.UserName" class="control-label">Username</label>
                <input asp-for="UserModel.UserName" class="form-control" type="text" name="UserModel.UserName"/>
                <span asp-validation-for="UserModel.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.Password" class="control-label">Password</label>
                <input asp-for="UserModel.Password" class="form-control"  type="password" name="UserModel.Password"/>
                <span asp-validation-for="UserModel.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.Email" class="control-label">Email</label>
                <input asp-for="UserModel.Email" class="form-control" type="email" name="UserModel.Email"/>
                <span asp-validation-for="UserModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.PhoneNumber" class="control-label">Phone Number</label>
                <input asp-for="UserModel.PhoneNumber" class="form-control" type="tel" name="UserModel.PhoneNumber"/>
                <span asp-validation-for="UserModel.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.Role" class="control-label">Role</label>
                <select asp-for="UserModel.RoleId" 
                        class="form-control"
                        asp-items="@Model.RoleNames"
                        name="UserModel.RoleId">
                    <option value="">-- Select Role --</option>
                </select>
                <span asp-validation-for="UserModel.RoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
