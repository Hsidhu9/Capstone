@page "/"
@namespace Shift_Picker.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ShiftPicker</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
</head>
<body>
    <app>
        <component type="typeof(App)" render-mode="ServerPrerendered" />
    </app>

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js">
        function assignSelectedTimeClass(startElementId , endElementId ) {
            var startElementIndex = startElementId[startElementId.length - 1];
            var endElementIndex = endElementId[endElementId.length - 1];

            var dayOfWeek = startElementId.substr(0, startElementIndex)

            for (var i = startElementIndex; i <= endElementIndex; i++) {

            
                var x = document.getElementById(dayOfWeek + i);
                x.classList.Add('event');
            }
    </script>
</body>
</html>
