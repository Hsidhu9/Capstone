@page "/profile/{employeeId:int}"
@namespace Shift_Picker.Components
@inherits Shift_Picker.Components.UserProfileVM
@if (EmployeeProfile != null)
{
    <div class="row">
        <div class="col" />
        <div class="col-5 card alert alert-secondary mt-4">
            <h3>Edit User</h3>
            <div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">First Name</label>
                    <input class="form-control" type="text" @bind="EmployeeProfile.FirstName" />
                    <span asp-validation-for="UserModel.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Last Name</label>
                    <input class="form-control" type="text" name="UserModel.LastName" @bind="EmployeeProfile.LastName" />
                    <span asp-validation-for="UserModel.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Username</label>
                    <input class="form-control" type="text" name="UserModel.UserName" @bind="EmployeeProfile.UserName" />
                    <span asp-validation-for="UserModel.UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Password</label>
                    <input class="form-control" type="password" name="UserModel.Password" @bind="EmployeeProfile.Password" />
                    <span asp-validation-for="UserModel.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Email</label>
                    <input class="form-control" type="email" name="UserModel.Email" @bind="EmployeeProfile.Email" />
                    <span asp-validation-for="UserModel.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Address</label>
                    <input class="form-control" type="text" placeholder="Address" @bind="EmployeeProfile.Address" /><br />
                    <input class="form-control" type="text" placeholder="City" @bind="EmployeeProfile.City" /><br />
                    <input class="form-control" type="text" placeholder="State" @bind="EmployeeProfile.State" /><br />
                    <input class="form-control" type="text" placeholder="Zip" @bind="EmployeeProfile.Zip" /><br />
                    <label class="control-label">Select Country</label><br />
                    <select @bind="EmployeeProfile.Country">
                        <option value="USA"> USA </option>
                        <option value="Canada"> Canada </option>
                    </select>

                </div>
                <div class="form-group">
                    <label asp-for="UserModel.RoleId" class="control-label">Select A Role</label><br />

                    <select @bind="EmployeeProfile.RoleId">
                        @foreach (ShiftPicker.Data.Models.UserRole userRole in UserRoles)
                        {
                            <option value="@userRole.Id"> @userRole.RoleName</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-primary" @onclick="UpdateEmployee" />
                </div>
            </div>
        </div>
        <div class="col" />
    </div>
}